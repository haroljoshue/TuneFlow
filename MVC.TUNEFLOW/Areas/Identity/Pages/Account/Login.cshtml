@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 d-none d-md-block text-center">
            <img src="~/img/login.png" alt="Login Image" class="img-fluid rounded-start" />
        </div>
        <div class="col-md-6">
            <h1 class="mb-4 text-center">@ViewData["Title"]</h1>
            <form id="account" method="post">
                <h5 class="text-center mb-3">Inicia sesión con tu cuenta</h5>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                    <label asp-for="Input.Password">Contraseña</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Iniciar sesión</button>

                <div><p> </p><br /</div>
                <div class="text-center">
                    <a asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a><br />
                    <p>¿No tienes cuenta? Regístrate como:</p>
                    <a asp-page="./RegisterCliente" asp-route-returnUrl="@Model.ReturnUrl">Oyente</a><br />
                    <a asp-page="./RegisterArtista" asp-route-returnUrl="@Model.ReturnUrl">Artista</a><br />

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
